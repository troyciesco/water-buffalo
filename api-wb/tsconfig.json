{
	"extends": "@getcronit/pylon/tsconfig.pylon.json",
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "dist",
		"noPropertyAccessFromIndexSignature": false,
		"noImplicitReturns": false,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"~/*": ["./*"]
		},
		"esModuleInterop": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"pylon.d.ts",
		"src/**/*",
		"__tests__/**/*",
		"scripts/**/*",
		"prisma/**/*"
	]
}
