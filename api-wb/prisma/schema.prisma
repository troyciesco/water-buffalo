generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id   String @id
  name String

  items CategoryItem[]

  @@map("category")
}

model CategoryItem {
  id          String   @id
  name        String
  description String
  icon        String?
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  tags        Tag[]

  @@map("category_item")
}

model Tag {
  id      String         @id
  primary String
  aliases String         @default("")
  items   CategoryItem[]

  @@map("tag")
}
